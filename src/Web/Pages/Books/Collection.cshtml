@page
@model Fulgoribus.Luxae.Web.Pages.Books.CollectionModel
@{
    ViewData["Title"] = "My Collection";
}

<h1>My Collection</h1>

@foreach (var book in Model.Books)
{
    <div class="form-row">
        <div class="col-2">
            @if (book.HasCover)
            {
                <img src="@Url.Action("Cover", "Books", new { book.ReleaseId })" style="max-width: 100%" data-toggle="modal" data-target="@("#cover" + book.ReleaseId)" />
        }
        </div>
        <div class="col-6">
            <a href="@Url.Page("Index", new { BookId = book.BookId })">@book.Title</a>
        </div>
        <div class="col-4">
            @book.AuthorDisplay
        </div>
    </div>

    @if (book.HasCover)
    {
        <div class="modal fade" id="@("cover" + book.ReleaseId)" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5>@book.Title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <img src="@Url.Action("Cover", "Books", new { book.ReleaseId, IsFullResolution = true })" style="max-width: 100%" />
                    </div>
                </div>
            </div>
        </div>
    }
}
